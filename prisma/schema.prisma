generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  id String @id @default(uuid())
  name String
  icon String
  products Product[]
}

model Product {
  id String @id @default(uuid())
  name String
  slug String
  imageURLs String[]
  description String
  basePrice Decimal @db.Decimal(8,2)
  discountPercentage Int @default(0)
  categoryID String
  category Category @relation(fields: [categoryID], references: [id])
}

model Testimonial {
  id String @id @default(uuid())
  Date DateTime
  Assessment String
  Description String
}